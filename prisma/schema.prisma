// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("EMPLOYEE")
  
  // Campos adicionais para perfil completo
  phone             String?
  address           String?
  birthDate         DateTime?
  emergencyContact  String?
  emergencyPhone    String?
  department        String?
  startDate         DateTime?
  profileComplete   Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  attendanceRecords AttendanceRecord[]
  auditLogs         AuditLog[]
  justifications    Justification[]
  reviewedJustifications Justification[] @relation("JustificationReviewer")
  qrEvents          QrEvent[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Machine {
  id        String   @id @default(cuid())
  name      String
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendanceRecords AttendanceRecord[]
  qrEvents          QrEvent[]
}

model AttendanceRecord {
  id        String          @id @default(cuid())
  userId    String
  machineId String
  type      String
  timestamp DateTime        @default(now())
  
  // Geolocalização
  latitude  Float?
  longitude Float?
  
  // Dados do QR
  qrData    String
  
  // Hash para integridade
  hash      String
  prevHash  String?

  user    User    @relation(fields: [userId], references: [id])
  machine Machine @relation(fields: [machineId], references: [id])

  @@index([userId, timestamp])
  @@index([machineId, timestamp])
}

model QrEvent {
  id        String   @id @default(cuid())
  machineId String
  qrData    String
  nonce     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  usedAt    DateTime?
  usedBy    String?
  createdAt DateTime @default(now())

  machine Machine @relation(fields: [machineId], references: [id])
  user    User?   @relation(fields: [usedBy], references: [id])

  @@index([nonce])
  @@index([machineId, createdAt])
  @@index([used, expiresAt])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String
  details   String?
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId, timestamp])
  @@index([action, timestamp])
}

model Justification {
  id            String   @id @default(cuid())
  userId        String
  type          String   // "LATE", "ABSENCE"
  date          DateTime
  reason        String
  status        String   @default("PENDING") // "PENDING", "APPROVED", "REJECTED"
  adminResponse String?
  reviewedAt    DateTime?
  reviewedBy    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user     User  @relation(fields: [userId], references: [id])
  reviewer User? @relation("JustificationReviewer", fields: [reviewedBy], references: [id])

  @@index([userId, date])
  @@index([status])
}

